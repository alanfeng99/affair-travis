<apex:page controller="AccountSettingController" docType="html-5.0" cache="false" applyHtmlTag="true" standardStylesheets="false" showHeader="false" action="{!checkCookie}">
    <!-- Begin Default Content REMOVE THIS -->
    <html lang="en">    
        <head>
            <title>AccountSettingPage</title>
            <!-- Required meta tags -->
            <meta charset="utf-8"/>
            <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no"/>
            <meta name="google-signin-client_id" content="460302933995-0dvvjqjl832ttipjg9plbipc5fe49n63.apps.googleusercontent.com" />
            <!-- Bootstrap CSS -->
            <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
                  crossorigin="anonymous"/>
            <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css"/>
            <!-- FontsStyle CSS -->
            <link rel="stylesheet" href="https://fonts.googleapis.com/earlyaccess/cwtexyen.css"/> 
            <script src="//connect.facebook.net/en_US/all.js"></script> 
            <script src="https://apis.google.com/js/platform.js?onload=renderButton" async="async defer"></script>      
            <apex:stylesheet value="{!$Resource.MediaqueryCSS}"/>
            <apex:stylesheet value="{!$Resource.TemplateCSS}"/>
        </head>
        <body class="bg-light">
            <script>
            function onSuccess(googleUser) {
                    var url = new URL(window.location.href);
                    var profile = googleUser.getBasicProfile();
                    linkAccountWithGoogleJS(profile.getEmail());
                }

                function onFailure(error) {
                    console.log(error);
                }
                
                function renderButton() {
                    gapi.signin2.render('my-signin2', {
                        'scope': 'profile email',
                        'width': 340,
                        'height': 40,
                        'longtitle': true,
                        'theme': 'dark',
                        'onsuccess': onSuccess,
                        'onfailure': onFailure
                    });
                }

                window.fbAsyncInit = function() {
                    FB.init({
                        appId      : '2130092460648420',
                        cookie     : true,
                        xfbml      : true,
                        version    : 'v2.8'
                    });

                    FB.getLoginStatus(function(response) {
                        var url = new URL(window.location.href);
                        if (response.authResponse != null) {
                            FB.api('/me', { locale: 'en_US', fields: 'name, email' }, function(response) {
                                linkAccountWithFacebookJS(response.email);
                            });
                        }
                        
                    });
                
                    FB.Event.subscribe('auth.login', function(response) {
                        var url = new URL(window.location.href);
                        if (response.authResponse != null) {
                            var token = response.authResponse.accessToken;
                            FB.api('/me', { locale: 'en_US', fields: 'name, email' },
                            function(response) {
                                linkAccountWithFacebookJS(response.email);
                            });
                        }
                        });
                };
            
                    (function(d, s, id) {
                    var js, fjs = d.getElementsByTagName(s)[0];
                    if (d.getElementById(id)) return;
                    js = d.createElement(s); js.id = id;
                    js.src = 'https://connect.facebook.net/en_US/sdk.js#xfbml=1&version=v2.8&appId=220395842018721&autoLogAppEvents=1';
                    fjs.parentNode.insertBefore(js, fjs);
                    }(document, 'script', 'facebook-jssdk'));
            </script>
            <apex:form >
                <apex:actionFunction action="{!linkAccountWithGoogle}" name="linkAccountWithGoogleJS" rerender="showname">
                    <apex:param name="googleUserEmail" value="" assignTo="{!googleUserEmail}"/>                    
                </apex:actionFunction>
            </apex:form>
            <apex:form >
                <apex:actionFunction action="{!linkAccountWithFacebook}" name="linkAccountWithFacebookJS" rerender="showname">
                    <apex:param name="facebookUserEmail" value="" assignTo="{!facebookUserEmail}"/>
                </apex:actionFunction>
            </apex:form>
            <apex:form id="form"> 
                <nav class="navbar navbar-expand-md navbar-light bg-white fixed-top border-bottom">
                    <a class="navbar-brand" href="#">
                        <apex:image url="{!$Resource.Logo}" styleClass="w110px h40px"/>
                    </a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExampleDefault" aria-controls="navbarsExampleDefault" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    
                    <div class="collapse navbar-collapse" id="navbarsExampleDefault">
                        <ul class="navbar-nav mr-auto">
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="http://example.com" id="dropdown01" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">{!viewModel.account.LastName}</a>
                                <div class="dropdown-menu" aria-labelledby="dropdown01">
                                    <apex:commandLink action="{!logOut}" value="登出" styleClass="dropdown-item"/>
                                    <!-- <a class="dropdown-item" href="#">Another action</a>
<a class="dropdown-item" href="#">Something else here</a> -->
                                </div>
                            </li>
                            <li class="nav-item ">
                                <apex:commandLink value="總覽" action="{!toSummaryPage}" styleClass="nav-link"/>
                            </li>
                            <li class="nav-item">
                                <apex:commandLink value="帳戶設定" action="{!toAccountSettingPage}" styleClass="nav-link"/>
                            </li>
                            <li class="nav-item">
                                <apex:commandLink value="訂閱管理" action="{!toSubscriptionManagementPage}" styleClass="nav-link "/>
                            </li>
                        </ul>
                    </div>
                </nav>

                <div class="card  border-light bg-light ">
                    <div class="card-header bg-white" style="margin-top: 28px;">                  
                        <div align="center" style="line-height:20px;">
                            <br/><br/>
                            <div class="letterspacing3px" style="font-size:20px;">帳戶設定</div><br/>
                            <div style="font-size:12px;">編輯修改你的個人帳號</div>
                        </div>
                    </div>
                    <apex:outputPanel rendered="{!updatedCreditCard}">
                        <small class="form-text text-danger text-center" >信用卡資訊已完成新增(變更)，訂閱到期時將會透過此信用卡繳款</small>
                    </apex:outputPanel>
                    <br/>
                    <div class="card-body " style="line-height:25px; font-size:14px;"> 
                        <div class="container" style="max-width:400px;"> 
          
                                    <div class="form-group" style="font-size:15px;">
                                        你目前使用 {!viewModel.account.PersonEmail } 做為登入信箱。
                                    </div>
                                    <apex:outputText style="font-color:red; font-size:12px;" rendered="{!ifChangeEmail}">您已更改電子郵件，請至信箱重新認證帳號</apex:outputText>
                                    <small><apex:messages style="color:red"/></small>
                                    <apex:panelGroup id="id_show">
                                        <apex:outputPanel rendered="{!isMainShow}">
                                            <table class="table  table-bordered" style="background-color:white">
                                                <tr>
                                                    <td>
                                                        <div class="form-row">
                                                            <div class="col-auto">
                                                                暱稱：
                                                            </div>
                                                            <div class="col-auto">
                                                                {!viewModel.account.LastName} 
                                                            </div>
                                                            <div class="col-auto">
                                                                <apex:commandLink value="變更" action="{!changeName}" reRender="id_show"/>  
                                                            </div>
                                                        </div>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td>
                                                        <div class="form-row">
                                                            <div class="col-auto">
                                                                信箱：
                                                            </div>
                                                            <div class="col-auto">
                                                                {!viewModel.account.PersonEmail}
                                                            </div>
                                                            <div class="col-auto">
                                                                <apex:commandLink value="變更" action="{!changeEmail}" reRender="id_show"/>  
                                                            </div>
                                                        </div>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td>
                                                        <div class="form-row">
                                                            <div class="col-auto">
                                                                密碼：
                                                            </div>
                                                            <div class="col-auto">
                                                                {!viewModel.account.Password__c}
                                                            </div>
                                                            <div class="col-auto">
                                                                <apex:commandLink value="變更" action="{!changePassword}" reRender="id_show"/>  
                                                            </div>
                                                        </div>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td>
                                                        <div class="form-row">
                                                            <div class="col-auto">
                                                                信用卡：
                                                            </div>
                                                            <div class="col-auto">
                                                                {!viewModel.account.credit_card_number__c}
                                                            </div>
                                                            <div class="col-auto">
                                                                <apex:commandLink value="變更" action="{!changeCreditCard}" reRender="id_show"/>  
                                                            </div>
                                                        </div>
                                                    </td>
                                                </tr>
                                            </table>                          
                                        </apex:outputPanel>
                                        <apex:outputPanel rendered="{!isChangeName}">
                                            <table class="table  table-bordered" style="background-color:white">
                                                <tr>
                                                    <td>
                                                        <div class="form-group">
                                                            請輸入新的暱稱 
                                                        </div>
                                                        <div class="form-group">
                                                            <apex:input value="{!viewModel.newLastName}" style="width:60%" html-placeholder="暱稱"/>
                                                        </div>
                                                        
                                                        <div class="form-group form-row">
                                                            <div class="col-auto">
                                                                <apex:commandButton value="儲存變更" action="{!submitName}" reRender="form" styleClass="btn btn-savechange"/>     
                                                            </div>
                                                            <div class="col-auto">
                                                                <apex:commandLink value="取消" action="{!cancelChange}" reRender="form"/>     
                                                            </div>          
                                                        </div>
                                                    </td>
                                                </tr>
                                            </table>   
                                        </apex:outputPanel>
                                        <apex:outputPanel rendered="{!isChangeEmail}">
                                            <table class="table  table-bordered" style="background-color:white">
                                                <tr>
                                                    <td>
                                                        <div class="form-row">
                                                            <div class="col-auto">
                                                                暱稱：
                                                            </div>
                                                            <div class="col-auto">
                                                                {!viewModel.account.LastName} 
                                                            </div>
                                                            <div class="col-auto">
                                                                <apex:commandLink value="變更" action="{!changeName}" reRender="form"/>  
                                                            </div>
                                                        </div>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td>
                                                        <div class="form-group">
                                                            請輸入變更後的電子信箱<br/>
                                                            <small>Email 信箱變更後需要再重新驗證已確認信箱無誤</small>
                                                        </div>  
                                                        <div class="form-group">
                                                            <apex:input value="{!viewModel.newEmail}" html-placeholder="電子信箱" style="width:200px;"/>
                                                        </div>
                                                        <div class="form-group form-row">
                                                            <div class="col-auto">
                                                                <apex:commandButton value="儲存變更" action="{!submitEmail}" styleClass="btn btn-savechange" reRender="form"/>     
                                                            </div>
                                                            <div class="col-auto">
                                                                <apex:commandLink value="取消" immediate="true" action="{!cancelChange}" reRender="form"/>     
                                                            </div>          
                                                        </div>        
                                                    </td>
                                                </tr>
                                            </table>   
                                        </apex:outputPanel>
                                        <apex:outputPanel rendered="{!isChangePassword}">
                                            <table class="table  table-bordered" style="background-color:white">
                                                <tr>
                                                    <td>
                                                        <div class="form-row">
                                                            <div class="col-auto">
                                                                暱稱：
                                                            </div>
                                                            <div class="col-auto">
                                                                {!viewModel.account.LastName} 
                                                            </div>
                                                            <div class="col-auto">
                                                                <apex:commandLink value="變更" action="{!changeName}"/>  
                                                            </div>
                                                        </div>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td>
                                                        <div class="form-row">
                                                            <div class="col-auto">
                                                                信箱：
                                                            </div>
                                                            <div class="col-auto">
                                                                {!viewModel.account.PersonEmail} 
                                                            </div>
                                                            <div class="col-auto">
                                                                <apex:commandLink value="變更" action="{!changeEmail}"/>  
                                                            </div>
                                                        </div>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td>
                                                        <apex:outputPanel rendered="{!IF(viewModel.account.Password__c != null, true, false)}">
                                                            <div >
                                                                請輸入目前的密碼<br/>
                                                                <small>請輸入你目前設定的密碼以確認身份</small><br/>
                                                            </div>
                                                            <div class="form-group">
                                                                <apex:inputSecret value="{!accountOld.Password__c}" style="width:70%" html-placeholder="舊密碼"/><br/>
                                                            </div>
                                                            <div >
                                                                新密碼
                                                            </div>
                                                            <div class="form-group">
                                                                <apex:inputSecret value="{!accountNew.Password__c}" style="width:70%" html-placeholder="新密碼"/><br/>
                                                            </div>
                                                            <div >
                                                                再輸入一次新密碼
                                                            </div>
                                                            <div class="form-group">
                                                                <apex:inputSecret value="{!accountVerify.Password__c}" style="width:70%" html-placeholder="再輸入一次新密碼"/><br/>
                                                            </div>
                                                            <div class="form-group form-row">
                                                                <div class="col-auto">
                                                                    <apex:commandButton value="儲存變更" action="{!submitPassword}" styleClass="btn btn-savechange" reRender="form"/>     
                                                                </div>
                                                                <div class="col-auto">
                                                                    <apex:commandLink value="取消" action="{!cancelChange}" reRender="form"/>     
                                                                </div>       
                                                            </div>
                                                        </apex:outputPanel>
                                                        <apex:outputPanel rendered="{!IF(viewModel.account.Password__c == null, true, false)}">
                                                            <div class="form-group form-row">
                                                                <div class="col-auto">
                                                                    <div>
                                                                        若要設定密碼，請先登出帳號，
                                                                    </div>
                                                                    <div>
                                                                        點選忘記密碼來設定密碼
                                                                    </div>                                                      
                                                                </div>
                                                                <div class="col-auto">
                                                                    <br/>
                                                                    <apex:commandLink value="取消" action="{!cancelChange}" reRender="form"/>     
                                                                </div>
                                                            </div>    
                                                        </apex:outputPanel>
                                                    </td>
                                                </tr>
                                            </table>
                                        </apex:outputPanel>
                                        <apex:outputPanel >
                                            <table class="table table-bordered" style="background-color:white" >
                                                <tr>
                                                    <td>
                                                        與外部的帳號建立聯結
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td>
                                                        <div class="form-group">
                                                            <div id="fbLogin" class="fb-login-button" data-max-rows="1" data-size="large" data-scope="public_profile,email"
                                                            data-button-type="continue_with" data-show-faces="false" data-auto-logout-link="false" data-use-continue-as="false" width="340"></div>
                                                        </div>
                                                        
                                                        <div class="form-group">
                                                            <div id="my-signin2" class="g-signin2" data-onsuccess="onSignIn"></div>  
                                                        </div>
                                                    </div>    
                                                    </apex:outputPanel>
                                                </td>
                                            </tr>
                                        </table>
                                    </apex:outputPanel>
                                    <apex:outputPanel >
                                        <table class="table table-bordered" style="background-color:white" >
                                            <tr>
                                                <td>
                                                    與外部的帳號建立聯結
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>
                                                    <apex:outputPanel rendered="{!IF(viewModel.account.FacebookEmail__c == null, true, false)}">
                                                        <div class="form-group">
                                                            <div id="fbLogin" class="fb-login-button" data-max-rows="1" data-size="large" data-scope="public_profile,email"
                                                            data-button-type="continue_with" data-show-faces="false" data-auto-logout-link="false" data-use-continue-as="false" width="340"></div>
                                                        </div>
                                                    </apex:outputPanel>
                                                    <apex:outputPanel rendered="{!IF(viewModel.account.GoogleEmail__c == null, true, false)}">
                                                        <div class="form-group">
                                                            <div id="my-signin2" class="g-signin2" data-onsuccess="onSignIn"></div>  
                                                        </div>
                                                    </apex:outputPanel>
                                                    <apex:outputPanel rendered="{!IF(viewModel.account.FacebookEmail__c == null, false, true)}">
                                                        Facebook: <apex:outputField value="{!viewModel.account.FacebookEmail__c}"/>
                                                    </apex:outputPanel>
                                                    <br/>
                                                    <apex:outputPanel rendered="{!IF(viewModel.account.GoogleEmail__c == null, false, true)}">
                                                        Google: <apex:outputField value="{!viewModel.account.GoogleEmail__c}"/>
                                                    </apex:outputPanel>
                                                </td>
                                            </tr>
                                        </table>       
                                    </apex:outputPanel>
                                </div>
                                
                    </div>
                </div>   
            </apex:form>   
            <div class="footer text-muted text-right">
                <hr style="width:100%"/>
                <p>
                    The Affairs Mediuum Ltd. 編集者新聞社有限公司
                </p>
            </div>
            
            
        </body>
